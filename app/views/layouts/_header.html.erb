<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
  <a class="navbar-brand" href="<%= root_path %>">Microblog</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link <%= active_class?(root_path) %>" href="<%= root_path %>">Home</a>
      <a class="nav-item nav-link <%= active_class?(users_path) %>" href="<%= users_path %>">People</a>
      <% if user_signed_in? %>
        <a class="nav-item nav-link <%= active_class?(user_path(current_user)) %>" href="<%= user_path(current_user) %>">My Tweets</a>
        <a class="nav-item nav-link <%= active_class?(edit_user_registration_path) %>" href="<%= edit_user_registration_path %>">Account</a>
      <% end %>
      <a class="nav-item nav-link <%= active_class?(about_path) %>" href="<%= about_path %>">About</a>
    </div>
  </div>

  <form class="form-inline">
    <% if user_signed_in? %>
      <%= new_button 'tweet', 'Tweet', 'feather', 'info' %>
      <%= content_tag :a, icon('fas', 'sign-out-alt', 'Sign out'), class: 'btn btn-danger', role: 'button', href: destroy_user_session_path, data: {method: :delete, confirm: 'Are you sure?'}, rel: :nofollow %>
    <% else %>
      <%= new_button 'user_session', 'Sign in', 'sign-in-alt' %>
      <%= new_button 'user_registration', 'Sign up', 'user-plus', 'primary' %>
    <% end %>
  </form>
</nav>
