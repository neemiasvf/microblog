<% title "Resend confirmation instructions" %>
<% page_header "Resend confirmation instructions" %>

<%= bootstrap_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.email_field :email, hide_label: true, prepend: '@', placeholder: 'your email', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
  <%= submit_button 'Resend confirmation instructions', 'envelope' %>
<% end %>

<%= render "devise/shared/links" %>
