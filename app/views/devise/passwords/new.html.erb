<% title "Forgot your password?" %>
<% page_header "Forgot your password?" %>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.email_field :email, hide_label: true, prepend: '@', placeholder: 'your email' %>
  <%= submit_button 'Send me reset password instructions', 'envelope' %>
<% end %>

<%= render "devise/shared/links" %>
