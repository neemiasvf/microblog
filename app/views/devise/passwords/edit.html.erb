<% title "Change your password" %>
<% page_header "Change your password" %>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.hidden_field :reset_password_token %>
  <%= f.password_field :password, placeholder: "#{@minimum_password_length} characters minimum" %>
  <%= f.password_field :password_confirmation %>
  <%= submit_button 'Change my password', 'save', 'danger' %>
<% end %>

<%= render "devise/shared/links" %>
